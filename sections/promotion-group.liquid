{% comment %}
  This is a simple section with a schema.
{% endcomment %}


  <h2 style="text-align : {{ section.settings.title_alignment }}">{{ section.settings.heading }}</h2>
 <div style="display: flex; align-items : center; gap: 20px; ">
    {% for block in section.blocks %}
    {% if block.type==promotion %}
        <div style="display: flex; flex-direction: row; gap: 18px">
            <h3>{{ block.settings.title }}</h3>
        {{ block.settings.image | image_url: width: 600 | image_tag  }}
        </div>
        {%endif%}
    {% endfor %}
</div> 


{% schema %}
{
  "name": "promotion group",
  "tag" : "section" ,
   "class" : "my-wrapper-class",
    "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Welcome!"
    },
    {
        "type": "select",
        "id": "title_alignment",
        "label": "Title alignment",
        "options": [
        {"label": "Left",
            "value": "left"
        },
        {"label": "right",
         "value": "right"
        },
        {"label": "center",
         "value": "center"
        }
        ],
        "default" : "left"
    }
  ],
  "blocks": [
    { "type": "promotion",
      "name" : "promotion",
      "settings": [
        { "type": "text",
          "id": "title",
          "label": "Title"
        },
        { "type": "image_picker",
            "label": "image",
            "id": "image"

         }
      ]
    }
        
  ],
  "presets": [
    {
      "name": "promotion group"
    }
  ]
}
{% endschema %}
