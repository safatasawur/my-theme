<div style="text-align: {{ section.settings.alignment }}; padding: 20px;">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.paragraph }}</p>

  {% if section.settings.image != blank %}
 {{ section.settings.image | image_url: width: 800 | image_tag: alt: 'Hero image' }}
  {% endif %}
</div>
{% schema %}
{
    "name":"Custom hero",
    "tag": "section",
    "class": "",
    "settings" :[
        {
            "type": "text",
            "id": "heading",
            "label": "Heading" ,
            "default":"heading here"     
        },
        {
            "type": "textarea",
            "id": "paragraph",
            "label": "paragraph",
            "default":"add what you want here"
        },
        {   "type": "image_picker",
             "id": "image",
             "label": "image"
        },
        {
            "type": "select",
             "id": "alignment",
             "label": "alignment",
             "options": [
                {"label": "left", "value": "left"},
                {"label": "right", "value": "right"},
                {"label": "center", "value": "center"}
             ], 
             "default": "center"
        }
    ],
    "presets": [
    {
      "name": "Custom Hero",
      
      },
    ]
}

{% endschema %}